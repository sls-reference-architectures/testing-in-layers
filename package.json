{
  "name": "testing-in-layers",
  "version": "1.0.0",
  "description": "A reference project to demonstrate testing at unit, int, and e2e layers",
  "main": "index.js",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "test": "npm run lint && npx jest unit.test --collectCoverage --collectCoverageFrom=src/**/*.ts --silent",
    "deploy": "npx sls deploy -s dev",
    "test:int": "NODE_ENV=dev npx jest int.test --config jest.config.e2e.js --silent",
    "test:e2e": "NODE_ENV=dev npx jest e2e.test --config jest.config.e2e.js --silent"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sls-reference-architectures/testing-in-layers.git"
  },
  "author": "Seth Orell",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sls-reference-architectures/testing-in-layers/issues"
  },
  "homepage": "https://github.com/sls-reference-architectures/testing-in-layers#readme",
  "devDependencies": {
    "@aws-sdk/client-cloudformation": "^3.121.0",
    "@tsconfig/node16": "^1.0.3",
    "@types/faker": "^5.5.9",
    "@types/jest": "^28.1.4",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.30.5",
    "aws-testing-library": "^1.1.2",
    "axios": "^0.27.2",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.24.1",
    "faker": "5.5.3",
    "husky": "^7.0.4",
    "jest": "^28.1.2",
    "serverless": "^2.70.0",
    "serverless-deployment-bucket": "^1.6.0",
    "serverless-iam-roles-per-function": "^3.2.0",
    "serverless-plugin-typescript": "^2.1.2",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@dazn/lambda-powertools-logger": "^1.28.1",
    "@middy/core": "^3.1.0",
    "@middy/http-error-handler": "^3.1.0",
    "@middy/http-json-body-parser": "^3.1.0",
    "@types/aws-lambda": "^8.10.101",
    "@types/http-errors": "^1.8.2",
    "aws-sdk": "^2.1167.0",
    "http-errors": "^2.0.0",
    "joi": "^17.6.0",
    "ulid": "^2.3.0"
  }
}
